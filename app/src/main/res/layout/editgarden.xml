<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gardencardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/urunekle"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:clickable="true"
                app:srcCompat="@drawable/gardenicon" />

            <TextView
                android:id="@+id/tarlaAdıLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/urunekle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Adı:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tarlaAdıInfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="95dp"
                android:hint="Tarla Adını Girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/tarlaAdıLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardViewGarID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#E53935"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/urunekle"
                tools:text="tarlaID" />

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tarlaAdıLabel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:text="Alanı:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tarlaalnınfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="130dp"
                android:hint="Alanı girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/area"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/adanumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="Ada:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/adaınfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="170dp"
                android:hint="Ada no girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/adanumber"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/parcel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adanumber"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="Parsel:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/parselınfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="210dp"
                android:hint="Parsel girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/parcel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/parcel"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="Şehir:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cityınfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="250dp"
                android:hint="Şehir girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/city"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/city"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="İlçe:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/towninfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="290dp"
                android:hint="İlçe girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/town"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/town"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="Mahalle:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/districtinfo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="330dp"
                android:hint="Mahalle girin"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/district"
                app:layout_constraintTop_toTopOf="parent" />






            <Button
                android:id="@+id/editgardenbtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@id/districtinfo1"
                android:layout_marginTop="50dp"
                android:background="#0080ff"
                android:layout_margin="50dp"
                android:clickable="true"
                android:src="@drawable/savecost"
                android:text="Tarlayı güncelle"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@id/districtinfo1"
                app:layout_constraintTop_toTopOf="parent"></Button>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>